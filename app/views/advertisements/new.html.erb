<h1>Advertisements#new</h1>
<p>Find me in app/views/advertisements/new.html.erb</p>

<h1>New Advertisement</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for advertisements</p>
        <ul>
            <li>Only good products</li>
            <li>Only funny ads</li>
            <li>Only free products</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |a| %>
            <div class="form-group">
                <%= a.label :title %>
                <%= a.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
            </div>
            <div class="form-group">
                <%= a.label :copy %>
                <%= a.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement copy" %>     
            </div>
            <div class="form-group">
                <%= a.label :price %>
                <%= a.text_field :price, rows: 8, class: 'form-control', placeholder: "Enter price" %>     
            </div>
            <div class="form-group">
                <%= a.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>